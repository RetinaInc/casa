name = Casa
description = The default theme for the Casa distro.
base theme = stanza
screenshot = screenshot.png
engine = phptemplate
core = 7.x

; Make this theme available in Roomify installer.
roomify_type = theme

stylesheets[all][] = css/casa.normalize.css
stylesheets[all][] = css/casa.layouts.css
stylesheets[all][] = css/casa.hacks.css
stylesheets[all][] = css/casa.styles.css
stylesheets[all][] = css/casa.no-query.css


stylesheets[all][] = css/stanza.normalize.css
stylesheets[all][] = css/stanza.layouts.css
stylesheets[all][] = css/stanza.hacks.css
stylesheets[all][] = css/stanza.styles.css
stylesheets[all][] = css/stanza.no-query.css

; Casa provides its own menu item theming, so disable core here.
stylesheets[all][] = system.menus.theme.css

scripts[] = js/casa.behaviors.js

;----------// Panels
plugins[panels][layouts] = layouts

